<Window
    x:Class="ResXQuickAdd.Dialogs.AddResourceDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Add Missing String Resource"
    Width="500"
    Height="280"
    ResizeMode="NoResize"
    ShowInTaskbar="False"
    WindowStartupLocation="CenterOwner">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="booleanToVisibilityConverter" />

        <Style x:Key="LabelStyle" TargetType="Label">
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Margin" Value="0,8,0,2" />
        </Style>
        <Style x:Key="TextBoxStyle" TargetType="TextBox">
            <Setter Property="Margin" Value="0,0,0,8" />
            <Setter Property="Padding" Value="4" />
            <Setter Property="Height" Value="23" />
        </Style>
        <Style
            x:Key="MultilineTextBoxStyle"
            BasedOn="{StaticResource TextBoxStyle}"
            TargetType="TextBox">
            <Setter Property="Height" Value="60" />
            <Setter Property="VerticalScrollBarVisibility" Value="Auto" />
            <Setter Property="TextWrapping" Value="Wrap" />
            <Setter Property="AcceptsReturn" Value="True" />
            <Setter Property="VerticalContentAlignment" Value="Top" />
        </Style>
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="75" />
            <Setter Property="Height" Value="23" />
            <Setter Property="Margin" Value="8,0,0,0" />
        </Style>
    </Window.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Resource Key Display  -->
        <TextBlock
            Grid.Row="0"
            Margin="0,0,0,16"
            FontWeight="Bold">
            <Run Text="Resource Key: " />
            <Run
                x:Name="ResourceKeyRun"
                FontFamily="Consolas"
                Text="{Binding ResourceKey}" />
        </TextBlock>

        <!--  First Language Input  -->
        <Label
            Grid.Row="1"
            Content="{Binding FirstLanguageLabel}"
            Style="{StaticResource LabelStyle}" />
        <TextBox
            x:Name="FirstLanguageTextBox"
            Grid.Row="2"
            Style="{StaticResource TextBoxStyle}"
            Text="{Binding FirstLanguageValue, UpdateSourceTrigger=PropertyChanged}" />

        <!--  Second Language Input  -->
        <Label
            Grid.Row="3"
            Content="{Binding SecondLanguageLabel}"
            Style="{StaticResource LabelStyle}" />
        <TextBox
            x:Name="SecondLanguageTextBox"
            Grid.Row="4"
            Style="{StaticResource MultilineTextBoxStyle}"
            Text="{Binding SecondLanguageValue, UpdateSourceTrigger=PropertyChanged}" />

        <!--  Status Text  -->
        <TextBlock
            x:Name="StatusTextBlock"
            Grid.Row="5"
            Margin="0,8,0,0"
            VerticalAlignment="Top"
            Foreground="Red"
            Text="{Binding StatusMessage}"
            Visibility="{Binding HasError, Converter={StaticResource booleanToVisibilityConverter}}" />

        <!--  Buttons  -->
        <StackPanel
            Grid.Row="6"
            Margin="0,16,0,0"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <Button
                x:Name="OkButton"
                Click="OkButton_Click"
                Content="OK"
                IsDefault="True"
                Style="{StaticResource ButtonStyle}" />
            <Button
                x:Name="CancelButton"
                Click="CancelButton_Click"
                Content="Cancel"
                IsCancel="True"
                Style="{StaticResource ButtonStyle}" />
        </StackPanel>
    </Grid>
</Window>